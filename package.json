{
  "name": "chat-bot",
  "private": true,
  "description": "Chat bot with viewer count system",
  "main": "src/bootstrap.js",
  "scripts": {
    "start": "node src/bootstrap.js",
    "start:debug": "node src/bootstrap.js --debug",
    "lint": "node scripts/lint/no-raw-timeouts.js && eslint \"src/**/*.js\" \"tests/**/*.js\" && knip --config knip.json --include files,unlisted,exports",
    "test": "cross-env NODE_ENV=test jest"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "knip": "^5.61.2"
  },
  "jest": {
    "testEnvironment": "node",
    "workerThreads": true,
    "setupFiles": [
      "<rootDir>/tests/setup/jest.prerun.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup/jest.setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*-test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/__mocks__/**"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapper": {
      "^youtubei\\.js$": "<rootDir>/tests/__mocks__/youtubei.js",
      "^tiktok-live-connector$": "<rootDir>/tests/__mocks__/tiktok-live-connector.js",
      "^ws$": "<rootDir>/tests/__mocks__/ws.js"
    },
    "testTimeout": 15000,
    "verbose": true,
    "silent": false,
    "clearMocks": true,
    "restoreMocks": true,
    "resetMocks": true,
    "collectCoverage": false,
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageDirectory": "coverage",
    "reporters": [
      "default"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.9.0",
    "ini": "^5.0.0",
    "obs-websocket-js": "^5.0.6",
    "selfsigned": "^3.0.1",
    "ws": "^8.18.0",
    "youtubei.js": "^16.0.1"
  }
}
